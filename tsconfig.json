{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@config/*": [
        "./configurations/*"
      ]
    },
    "rootDirs": [
      "./src",
      "./configurations"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./configurations/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}